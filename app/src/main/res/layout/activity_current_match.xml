<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".CurrentMatchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="0dp"
        android:layout_weight="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sample Name"
                    android:layout_alignParentEnd="true"
                    android:textSize="17sp"
                    android:layout_marginRight="5sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:id="@+id/batting_team_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/batting_team_name"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="123"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:id="@+id/batting_team_score"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="/"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:id="@+id/batting_team_wicket"/>
                </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/batlogo"
                android:adjustViewBounds="true"
                android:layout_margin="10sp"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:text="Sample Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="5sp"
                android:layout_height="wrap_content"
                android:id="@+id/bowling_team_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_below="@id/bowling_team_name"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="123"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:id="@+id/bowling_team_score"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="/"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:id="@+id/bowling_team_wicket"/>
                </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/balllogo"
                android:adjustViewBounds="true"
                android:layout_margin="10sp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:text="Batsmen"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_alignParentBottom="true"
                android:text="Overs "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="22sp"
                android:id="@+id/over_ball"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5sp"
                android:textStyle="bold"
                android:text="7.2"
                />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/batsman_list"
        android:layout_weight="7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Current Over"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/over_list"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="11">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bowlers"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="15"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/bowler_over_no"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/bowler_name"
                android:textSize="18sp"
                android:text="Bowler Name"
                android:layout_height="wrap_content"
                android:layout_weight="7"/>
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:text="W"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:text="Extra"
                android:id="@+id/bowler_extra_run"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:id="@+id/bowler_run"
                android:text="Total"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/bowler_list"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>